 @inject SignInManager<AppUser> signInManager;
 @model AboutViewModel;
  <!-- Header Section Begin -->
<header class="header-section header-normal">
    <div class="top-nav">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="tn-left">
                        <li><i class="fa fa-phone"></i> @Model.contact.Phone</li>
                        <li><i class="fa fa-envelope"></i> @Model.contact.Email</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="tn-right">
                        <div class="top-social">
                            @foreach(var item in Model.socialMedias)
                            {
                                if(item.Title is "Facebook")
                                {
                                    <a href="@item.URL" target="_blank"><i class="fa fa-facebook"></i></a>
                                }
                               else if (item.Title is "Twitter")
                                {
                                    <a href="@item.URL" target="_blank"><i class="fa fa-twitter"></i></a>
                                }
                              else  if (item.Title is "Instagram")
                                {
                                    <a href="@item.URL" target="_blank"><i class="fa fa-instagram"></i></a>
                                }
                            }
                        </div>
                        <a href="#" class="bk-btn">Reserve Now</a>
                        <div class="language-option">
                      @*      @if (signInManager.IsSignedIn(User))
                            {
                               <form method="post" asp-action="signout" asp-controller="account" asp-area="management">
                                    Login:  @User.Identity.Name
                                </form>
                            }
                            else
                            {
                                <span>Account <i class="fa fa-angle-down"></i></span>
                                <div class="flag-dropdown">
                                    <ul>
                                        <li><a asp-action="login" asp-controller="account" asp-area="management">Login</a></li>
                                        <li><a asp-action="register" asp-controller="account" asp-area="management">Register</a></li>
                                    </ul>
                                </div>
                            }
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-item">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a asp-action="index" asp-controller="home">
                            <img src="~/images/logo.png" asp-append-version="true" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu">
                            <ul>
                                <li><a asp-action="index" asp-controller="home">Home</a></li>
                                <li><a asp-action="index" asp-controller="rooms">Rooms</a></li>
                                <li class="active"><a asp-action="index" asp-controller="about">About Us</a></li>
                                <li><a asp-action="index" asp-controller="news">News</a></li>
                                <li><a asp-action="index" asp-controller="contact">Contact</a></li>
                            </ul>
                        </nav>
                        <div class="nav-right search-switch">
                            <i class="icon_search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header End -->
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>About Us</h2>
                    <div class="bt-option">
                        <a asp-action="index" asp-controller="home">Home</a>
                        <span>About Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- About Us Page Section Begin -->
<section class="aboutus-page-section spad">
    <div class="container">
        <div class="about-page-text">
            <div class="row">
                <div class="col-lg-6">
                    <div class="ap-title">
                        <h2>Welcome To Wallgate.</h2>
                        <p>
                          @Model.about.Description.
                        </p>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <ul class="ap-services">
                        @foreach(var item in Model.offers)
                        {
                            <li><i class="icon_check"></i> @item.Title.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="about-page-services">
            <div class="row">
                @foreach(var item in Model.services)
                {
                    <div class="col-md-4">
                        <div class="ap-service-item set-bg" data-setbg="/images/abouts/@item.ImageURL">
                            <div class="api-text">
                                <h3>@item.Title</h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- About Us Page Section End -->
<!-- Video Section Begin -->
<section class="video-section set-bg" data-setbg="/images/video-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="video-text">
                    <h2>@Model.about.VideoTitle.</h2>
                    <p>@Model.about.VideoDescription</p>
                    <a href="@Model.about.VideoURL" class="play-btn video-popup">
                        <img src="~/images/play.png" alt="" asp-append-version="true"/>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Video Section End -->
<!-- Gallery Section Begin -->
<section class="gallery-section spad">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <span>Photo Gallery</span>
                    <h2>Explore Our Awesome Environment</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                        @foreach(var item in Model.galleries)
                        {
                          <div class="col-md-6">
                            <div class="gallery-item set-bg" data-setbg="/images/gallery/@item.ImageURL">
                                <div class="gi-text">
                                    <h3>@item.Title</h3>
                                </div>
                            </div>
                          </div>
                        }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Gallery Section End -->