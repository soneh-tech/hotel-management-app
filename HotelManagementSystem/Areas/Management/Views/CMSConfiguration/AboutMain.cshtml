@inject SignInManager<AppUser> signInManager;
@model AboutViewModel
<div class="content-body">
    <div class="container-fluid">
        <form data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure" asp-action="editaboutmain" asp-controller="cmsconfiguration" asp-area="management">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Modify Main Content Of About Page</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="card-body">
                                    <div class="form-row">
                                        <input type="hidden" asp-for="@Model.about.ID">
                                        <div class="form-group col-md-6">
                                            <label asp-for="@Model.about.VideoTitle">Video Title</label>
                                            <input asp-for="@Model.about.VideoTitle" class="form-control">
                                            <span asp-validation-for="@Model.about.VideoTitle" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="@Model.about.VideoDescription">Video Description</label>
                                            <textarea rows="2" asp-for="@Model.about.VideoDescription" class="form-control"></textarea>
                                            <span asp-validation-for="@Model.about.VideoDescription" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="@Model.about.VideoURL">Video URL</label>
                                            <input asp-for="@Model.about.VideoURL" class="form-control">
                                            <span asp-validation-for="@Model.about.VideoURL" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="@Model.about.Description">Main About Description</label>
                                            <textarea rows="4" asp-for="@Model.about.Description" class="form-control"></textarea>
                                            <span asp-validation-for="@Model.about.Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <button type="submit" class="btn btn-primary pull-right">Save Changes</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script type="text/javascript">

        function OnSuccess() {
            swal({
                title: "Good Job !!!",
                text: "your record was saved successfully",
                type: "success"
            });
        }
        function OnFailure() {
            swal({
                title: "Oops... ",
                text: "something went wrong. please try again",
                type: "wrong"
            });
        }

    </script>
}