@inject SignInManager<AppUser> signInManager;
@model EventsViewModel
<div class="modal fade bd-example-modal-md" id="delete-@Model.my_event.ID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form data-ajax="true" data-ajax-update="#event_content" data-ajax-method="post" data-ajax-failure="OnFailure" data-ajax-success="OnSuccess" asp-area="management" asp-action="removeevent" asp-controller="cmsconfiguration">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure you want to delete this item?</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input asp-for="@Model.my_event.ID" value="@Model.my_event.ID" type="hidden">
                            <input asp-for="@Model.my_event.Title" value="@Model.my_event.Title" type="hidden">
                            <input asp-for="@Model.my_event.ImageURL" value="@Model.my_event.ImageURL" type="hidden">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No Close</button>
                    <button type="submit" class="btn btn-primary">Yes Proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>
