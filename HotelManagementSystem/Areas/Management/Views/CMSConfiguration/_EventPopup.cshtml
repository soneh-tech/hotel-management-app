@inject SignInManager<AppUser> signInManager;
@model EventsViewModel
<div class="modal fade" id="event_modal-@Model.my_event.ID" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Event Information</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form enctype="multipart/form-data" data-ajax="true" data-ajax-method="post" data-ajax-update="#event_content" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure" asp-action="saveevent" asp-controller="cmsconfiguration" asp-area="management">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input asp-for="@Model.my_event.ID" value="@Model.my_event.ID" class="form-control" type="hidden">
                            <input asp-for="@Model.my_event.ImageURL" value="@Model.my_event.ImageURL" class="form-control" type="hidden">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="form-group col-md-12">
                                <label asp-for="my_event.Title">Event</label>
                                <input asp-for="my_event.Title" class="form-control" placeholder="Name">
                                <span asp-validation-for="my_event.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="my_event.NewsDate">Event Date</label>
                                <input asp-for="my_event.NewsDate" class="datepicker-default form-control" id="datepicker" placeholder="DD/MM/YY">
                                <span asp-validation-for="my_event.NewsDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                  
               
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <img src="~/images/news/@Model.my_event.ImageURL" asp-append-version="true" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="image"></label>
                            <div class="fallback w-100">
                                <input asp-for="image" class="form-control dropify" />
                            </div>
                            <span class="text-danger">make sure you select a  370 x 450 sized image</span>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
