@inject SignInManager<AppUser> signInManager;
@model AboutViewModel
<div class="modal fade" id="modify-@Model.service.ID" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Service Item</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="editaboutservices" asp-controller="cmsconfiguration" asp-area="management">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input asp-for="@Model.service.ID" value="@Model.service.ID" class="form-control" type="hidden">
                            <input asp-for="@Model.service.ImageURL" value="@Model.service.ImageURL" class="form-control" type="hidden">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.service.Title">Service Title</label>
                            <input asp-for="@Model.service.Title" class="form-control" placeholder="name">
                            <span asp-validation-for="@Model.service.Title" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <img src="~/images/abouts/@Model.service.ImageURL" asp-append-version="true" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="image"></label>
                            <div class="fallback w-100">
                                <input  asp-for="image" class="form-control dropify" />
                            </div>
                            <span class="text-danger">make sure you select a  370 x 420 sized image</span>
                            <span asp-validation-for="image" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
