@model List<UsersViewModel>

<thead>
    <tr>
        <th>S/No</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
        <th></th>
        <th>Select</th>
    </tr>
</thead>
<tbody>
    @{
        for (int i = 0; i < Model.Count; i++)
        {
            var s_no = i + 1;
            <tr>
                <td>@s_no</td>
                <td><input asp-for="@Model[i].FirstName" disabled /></td>
                <td><input asp-for="@Model[i].LastName" disabled /></td>
                <td><input asp-for="@Model[i].UserID" value="@Model[i].UserID" type="hidden" /></td>
                <td></td>
                <td>
                    <div class="form-check">
                        <input asp-for="@Model[i].IsSelected" type="checkbox" />
                    </div>
                </td>
            </tr>
        }
    }
</tbody>
