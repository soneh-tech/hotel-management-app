@inject SignInManager<AppUser> signInManager;
@model RoomTypeViewModel
<div class="modal fade bd-example-modal-md" id="delete-@Model.RoomTypeID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form method="post"
                  asp-area="management" asp-action="deleteroomtype" asp-controller="hotelconfiguration">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure you want to delete this room type?</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input asp-for="RoomTypeID" value="@Model.RoomTypeID" type="hidden">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <partial name="_ModalFooterButtons" />
                </div>
            </form>
        </div>
    </div>
</div>
