@inject SignInManager<AppUser> signInManager;
@model Ammenity
<div class="modal fade bd-example-modal-md" id="modify-@Model.AmmenityID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modify Ammenity Information</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form method="post" asp-action="modifyammenity" asp-area="management" asp-controller="hotelconfiguration">
                <div class="modal-body">
                    <div class="form-row">
                            <input asp-for="AmmenityID" value="@Model.AmmenityID" type="hidden">
                        <div class="form-group col-md-12">
                            <label asp-for="Name">Ammenity Name</label>
                            <input asp-for="Name" class="form-control">
                        </div>
                      
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="IsActive">Currently Available</label>
                            <select asp-for="IsActive" class="form-control">
                                <option value="">Choose...</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <partial name="_ModalFooterButtons" />
                </div>
            </form>
        </div>
    </div>
</div>
