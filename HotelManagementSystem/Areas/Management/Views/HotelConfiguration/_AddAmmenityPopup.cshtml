@inject SignInManager<AppUser> signInManager;
@model Ammenity
<div class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Ammenity Information</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form method="post" asp-action="addammenity" asp-area="management" asp-controller="hotelconfiguration">
                <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for ="Name">Ammenity Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="IsActive">Currently Available</label>
                        <select asp-for="IsActive" class="form-control">
                            <option value="">Choose...</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        </div>                
                </div>
            </div>
            <div class="modal-footer">
                    <partial name="_ModalFooterButtons" />
            </div>
            </form>
        </div>
    </div>
</div>
