@model AdminLoginViewModel
<div class="auth-form">
    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
    <h4 class="text-center mb-4">Sign in your account</h4>
    <form method="post">
        <div class="form-group">
            <label asp-for="Email" ><strong>Email</strong></label>
            <input asp-for="Email" class="form-control" placeholder="hello@example.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"><strong>Password</strong></label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-row d-flex justify-content-between mt-4 mb-2">
            <div class="form-group">
                <div class="form-check ml-2">
                    <input class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="forgotpassword">Forgot Password?</a>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block">Sign me in</button>
        </div>
    </form>
    <div class="new-account mt-3">
        <p>Don't have an account? <a class="text-primary" asp-area="management" asp-action="register" asp-controller="account">Sign up</a></p>
    </div>
</div>
