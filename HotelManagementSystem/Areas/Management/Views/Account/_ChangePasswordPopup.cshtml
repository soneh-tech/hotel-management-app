@inject SignInManager<AppUser> signInManager;
@model ChangePasswordViewModel
<div class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form data-ajax="true" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure" data-ajax-method="post"  asp-area="management"
                  asp-action="changepassword" asp-controller="account">
                <div class="modal-header">
                    <h5 class="modal-title">Change Password</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="CurrentPassword">Current Password</label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="current password">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="NewPassword">New Password</label>
                            <input asp-for="NewPassword" class="form-control" placeholder="new password">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="ConfirmPassword">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="confirm password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                  
   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
