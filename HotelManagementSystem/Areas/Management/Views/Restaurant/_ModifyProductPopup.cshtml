@model ProductViewModel

<div class="modal fade" id="modify-@Model.Product.ProductID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Product Information</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="modifyproduct" asp-area="management" asp-controller="restaurant">
                <input asp-for="@Model.Product.ProductID" value="@Model.Product.ProductID" class="form-control" type="hidden">
                <input asp-for="@Model.Product.ImageURL" value="@Model.Product.ImageURL" class="form-control" type="hidden">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Product.ProductName">Product Name</label>
                            <input asp-for="Product.ProductName" class="form-control" placeholder="product">
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Product.UnitPrice">Unit Price</label>
                            <input asp-for="Product.UnitPrice" class="form-control" placeholder="price">
                            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Product.ProductCategoryID">Category</label>
                            <select asp-for="Product.ProductCategoryID" class="form-control">
                                <option value="">Choose...</option>
                                <option value="1">Food Item</option>
                                <option value="2">Drink</option>
                            </select>
                            <span asp-validation-for="Product.ProductCategoryID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <img src="~/images/products/@Model.Product.ImageURL" asp-append-version="true" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Photo"></label>
                            <div class="fallback w-100">
                                <input asp-for="Photo" multiple class="form-control dropify" />
                            </div>
                            <span class="text-danger">make sure you select a 370 x 240 sized image</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
