@inject SignInManager<AppUser> signInManager;
@model RestaurantViewModel
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">List of All Products</h4>
                        <button class="btn btn-primary right" type="button" data-toggle="modal" data-target=".bd-example-modal-lg">Add Food Or Drink</button>

                        @await Html.PartialAsync("_AddProductPopup",new ProductViewModel())
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#food">
                                    <span>
                                        Restaurant  &nbsp; <i class="ti-home"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#drink">
                                    <span>
                                        Bar &nbsp; <i class="ti-home"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content tabcontent-border">
                          <partial name ="_IndexPartialView" model="Model"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script type="text/javascript">

        function OnComplete() {
            $(".modal").hide();
            $(".fade").hide();
        }

    </script>
}