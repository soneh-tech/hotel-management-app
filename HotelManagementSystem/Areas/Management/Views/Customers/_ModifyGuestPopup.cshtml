@inject SignInManager<AppUser> signInManager;
@model Customer
<div class="modal fade" id="bd-example-modal-lg-@Model.CustomerID" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-area="management" asp-action="modifyguestdetails" asp-controller="customers">
                <div class="modal-header">
                    <h5 class="modal-title">Guest Details</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Name">Full Names</label>
                            <input asp-for="Name" class="form-control" placeholder="full names">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Phone">Phone</label>
                            <input asp-for="Phone" class="form-control" placeholder="08012345678">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Address">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Full Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <input asp-for="CustomerID" value="@Model.CustomerID" class="form-control" type="hidden">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
